{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {}
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "applogs-{0:yyyy.MM}",
          "numberOfShards": 2,
          "numberOfReplicas": 1,
          "overwriteTemplate": true,
          "autoRegisterTemplate": true
        }
      }
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "CartApiRoute": {
        "ClusterId": "CartApiCluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "CatalogApiRoute": {
        "ClusterId": "CatalogApiCluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "DiscountApiRoute": {
        "ClusterId": "DiscountApiCluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "IdentityServerRoute": {
        "ClusterId": "IdentityServerCluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "OrderingApiRoute": {
        "ClusterId": "OrderingApiCluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "CartApiCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "VersionPolicy": "RequestVersionOrHigher"
        },
        "Destinations": {
          "dest1": {
            "Address": "https://localhost:7154"
          }
        }
      },
      "CatalogApiCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "VersionPolicy": "RequestVersionOrHigher"
        },
        "Destinations": {
          "dest1": {
            "Address": "https://localhost:7206"
          }
        }
      },
      "DiscountApiCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        },
        "Destinations": {
          "dest1": {
            "Address": "https://localhost:7109"
          }
        }
      },
      "IdentityServerCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "VersionPolicy": "RequestVersionOrHigher"
        },
        "Destinations": {
          "dest1": {
            "Address": "https://localhost:5001"
          }
        }
      },
      "OrderingApiCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "VersionPolicy": "RequestVersionOrHigher"
        },
        "Destinations": {
          "dest1": {
            "Address": "https://localhost:7133"
          }
        }
      }
    }
  }
}
